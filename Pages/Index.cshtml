@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}  

<div class="card h-100 shadow">
    <img class="card-img" src="../images/bg_homepage.jpg" style="height:auto"/> 
    <div class="card-img-overlay">  
        <div class="card-body">
            <h1 class="card-title">@ViewData["Title"]</h1>
            <p class="card-text text-wrap" style="width:450px">An Acumatica Cloud ERP demonstartion company.<br/><br/><b>RevisionTwo</b> is a fictional company used for learning about Acumatica and demonstrating Acumatica ERP API features.</p>
        </div>
        <div class="card-footer bg-transparent border-0">
            <p><a class="btn btn-primary" asp-area="Demo" asp-page="/Home/AboutRevisionTwo">Learn More &raquo;</a></p>
        </div>
    </div>
</div>
<br/>
<div class="row row-cols-1 row-cols-md-2 g-4">

    <div class="col">
        <div class="card h-100 shadow">        
            <div class="card-body">
                <h3 class=card-title>Getting Started</h3>
                <p class="card-text text-wrap" style="width: auto">Get the RevisionTwo demo data from the Sales -> Demo Materials section of the Acumatica Partner Portal.</p>
            </div>
            <div class="card-footer bg-transparent border-0">
                <p><a class="btn btn-primary" asp-area="Demo" asp-page=/Home/GettingStarted>Learn More &raquo;</a></p>
            </div>
        </div>
    </div>  
    
    <div class="col">
        <div class="card h-100 shadow">            
            <div class="card-body ">
                <h3 class=card-title>About this Demo Application</h3>
                <p class="card-text text-wrap" style="width: auto">This ASP.Net Core Web App is a front-end to an Acumatica ERP system using ReST Open API web services.</p>
            </div>
            <div class="card-footer bg-transparent border-0">
                <p><a class="btn btn-primary" asp-area="demo" asp-page="/Home/About">Learn More &raquo;</a></p>
            </div>
        </div>
    </div>


    <div class="col">
        <div class="card h-100 shadow">            
            <div class="card-body">
                <h3 class=card-title>About Acumatica</h3>
                <p class="card-text text-break" card-text text-wrap" style="width: auto">Acumatica was born in the cloud, built to meet the ever-evolving needs of midmarket companies and their customers.</p>
            </div>
            <div class="card-footer bg-transparent border-0">
                <p><a href="https://www.acumatica.com" class="btn btn-primary">Learn More &raquo;</a></p>
            </div>
        </div>   
    </div>
    
    <div class="col">
        <div class="card h-100 shadow">        
            <div class="card-body">
                <h3 class=card-title>Partner Portal</h3>
                <p class="card-text text-wrap" style="width: auto">Get the RevisionTwo demo data from the Sales -> Demo Materials section of the Acumatica Partner Portal.</p>
            </div>
            <div class="card-footer bg-transparent border-0">
                <p><a class="btn btn-primary" href="https://sso.acumatica.com/Main?ScreenId=SL000006&PageID=958c3fe4-555c-4883-a849-b2e34c3f85d0" target="_blank">Explore More &raquo;</a></p>
            </div>
        </div>
    </div>

</div>


